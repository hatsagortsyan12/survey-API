{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
		],
		"paths": {
			"@components/*": [
        "app/components/*"
			],
			"@interfaces/*": [
        "app/interfaces/*"
			],
			"@services/*": [
        "app/services/*"
			],
			"@constants/*": [
        "app/constants/*"
			],
			"@providers/*": [
        "app/providers/*"
      ],
			"@interceptors/*": [
        "app/interceptors/*"
      ]
		}
  }
}